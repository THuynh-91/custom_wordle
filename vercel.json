{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "functions": {
    "api/index.js": {
      "includeFiles": "dist/**"
    }
  },
  "routes": [
    {
      "src": "^/health$",
      "dest": "api/index.js"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ],
  "outputDirectory": "dist/frontend"
}
