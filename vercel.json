{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "functions": {
    "api/index.js": {
      "includeFiles": "dist/**"
    }
  },
  "routes": [
    {
      "src": "^/health$",
      "dest": "api/index.js"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "api/index.js"
    },
    {
      "src": "^/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))$",
      "dest": "/frontend/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/frontend/index.html"
    }
  ]
}
