{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/index.js": {
      "includeFiles": "dist/data/**"
    }
  },
  "routes": [
    {
      "src": "^/health$",
      "dest": "api/index.js"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "api/index.js"
    },
    {
      "src": "^/$",
      "dest": "frontend/index.html"
    },
    {
      "src": "^/(.*)$",
      "dest": "frontend/$1"
    }
  ]
}

